<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:apollo="http://www.ctrip.com/schema/apollo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.ctrip.com/schema/apollo http://www.ctrip.com/schema/apollo.xsd">
    <apollo:config />
    <bean id="datahubClient" class="com.aliyun.datahub.DatahubClient">
        <constructor-arg name="conf" ref="datahubConfiguration" />
    </bean>
    <bean id="datahubConfiguration" class="com.aliyun.datahub.DatahubConfiguration">
        <constructor-arg name="account" ref="aliyunAccount" />
        <constructor-arg name="endpoint" value="${default.endpoint}" />
    </bean>
    <bean id="aliyunAccount" class="com.aliyun.datahub.auth.AliyunAccount">
        <constructor-arg name="accessId" value="${default.access.id}" />
        <constructor-arg name="accessKey" value="${default.access.key}" />
    </bean>
</beans>